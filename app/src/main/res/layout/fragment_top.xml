<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".TopFragment">

    <!--    <com.google.android.youtube.player.YouTubePlayerView-->
    <!--        android:id="@+id/youTubePlayerView"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="200dp">-->

    <!--    </com.google.android.youtube.player.YouTubePlayerView>-->

    <TextView
        android:id="@+id/tv_tenvideo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_viewer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2.5Tr lượt xem" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="5 tháng trước " />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp">

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:src="@drawable/like" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="581" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_dislike"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:src="@drawable/dislike" />

            <TextView
                android:id="@+id/TextView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="22"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_chat"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:src="@drawable/chat" />

            <TextView
                android:id="@+id/tv_chat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="22"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_share"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:src="@drawable/share" />

            <TextView
                android:id="@+id/tv_share"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="22"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_download"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:src="@drawable/download" />

            <TextView
                android:id="@+id/tv_download"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="22"
                android:textAlignment="center" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp">


        <androidx.cardview.widget.CardView
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:cardCornerRadius="30dp">

            <ImageView
                android:id="@+id/img_logo"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/unnamed" />
        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:id="@id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kplus Sports"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="208 N người đăng kí"
                android:textSize="12sp" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_dangky"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F6F5F5"
            android:text="Đăng ký"
            android:textColor="#F44336" />
    </LinearLayout>

</LinearLayout>